<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="25sp"
    android:paddingTop="25sp">

    <!--Name of the class-->

    <TextView
        android:id="@+id/courseNameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="10sp"
        android:text="TextView"
        android:textSize="40dp"
        android:textStyle="bold" />

    <!--Location of the class-->

    <TextView
        android:id="@+id/courseLocationView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="TextView"
        android:paddingRight="30sp"
        android:layout_above="@+id/courseTimeView"
        android:layout_alignParentEnd="true" />

    <!--Start time of the class-->

    <TextView
        android:id="@+id/courseTimeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="TextView"
        android:paddingRight="30sp"
        android:layout_alignBottom="@+id/courseNameView"
        android:layout_alignParentEnd="true"
        />

    <!--Days of the week-->

    <TextView
        android:id="@+id/wednesday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WED"
        android:layout_below="@+id/courseNameView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/tuesday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/wednesday"
        android:layout_toLeftOf="@id/wednesday"
        android:layout_marginRight="10sp"
        android:text="TUE" />

    <TextView
        android:id="@+id/monday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/wednesday"
        android:layout_toLeftOf="@id/tuesday"
        android:layout_marginRight="10sp"
        android:text="MON" />

    <TextView
        android:id="@+id/thursday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/wednesday"
        android:layout_toRightOf="@id/wednesday"
        android:layout_marginLeft="10sp"
        android:text="THU" />

    <TextView
        android:id="@+id/friday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/wednesday"
        android:layout_marginLeft="10sp"
        android:layout_toRightOf="@id/thursday"
        android:text="FRI " />




</RelativeLayout>